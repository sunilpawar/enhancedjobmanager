<?xml version="1.0"?>
<extension key="com.skvare.enhancedjobmanager" type="module">
  <file>enhancedjobmanager</file>
  <name>Enhanced Job Manager</name>
  <description>Modern, feature-rich interface for managing CiviCRM scheduled jobs with advanced filtering, bulk operations, and real-time status monitoring.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Sunil Pawar</author>
    <email>sunil@skvare.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/Skvare/com.skvare.enhancedjobmanager</url>
    <url desc="Documentation">https://github.com/Skvare/com.skvare.enhancedjobmanager</url>
    <url desc="Support">https://github.com/Skvare/com.skvare.enhancedjobmanager</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-08-01</releaseDate>
  <version>1.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.81</ver>
    <ver>6.4</ver>
  </compatibility>
  <comments>Enhanced scheduled job management interface with modern UI, filtering, search, and bulk operations.</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Enhancedjobmanager</namespace>
    <format>23.02.1</format>
    <angularModule>crmEnhancedjobmanager</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
    <mixin>menu-xml@1.0.0</mixin>
  </mixins>
</extension>
